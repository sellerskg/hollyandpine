$ ->
  $('[data-background-url]').ready ->
    imageUrl = $('[data-background-url]').data('background-url')
    $('[data-background-url]').css('background-image', 'url(' + imageUrl + ')');

  $('#landing_page_body').ready ->
    tinymce.init
      selector:'#landing_page_body'
      height: 500
      plugins: 'print preview fullpage searchreplace autolink directionality code visualblocks visualchars fullscreen image link media template codesample table charmap hr pagebreak nonbreaking anchor toc insertdatetime advlist lists textcolor wordcount imagetools contextmenu colorpicker textpattern help'
      toolbar1: 'formatselect | bold italic strikethrough forecolor backcolor | link image | alignleft aligncenter alignright alignjustify  | numlist bullist outdent indent  | removeformat'
      content_css: ["<%= asset_url 'application.css' %>"]
